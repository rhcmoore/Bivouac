<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class=container-display>
            <div class="container">
                <h1>Into the woods.</h1>
                <p>Find and review a campsite</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campsite</a>
                </p>
            </div>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail campground-card">
                    <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>"></a>
                <div class="caption">
                    <h4><%= campground.name %></h4>
                    <h6><%= campground.location %></h6>
                </div>
                <p>
                    
                </p>
            </div>
        </div>
        <% }); %>
    </div>
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/campgrounds">First</a></li>
            <% } %>

            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>

            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>

            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>

            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>